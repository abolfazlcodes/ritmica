{
  "expo": {
    "name": "ritmica",
    "slug": "ritmica",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "ritmica",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "/assets/fonts/public-sans/PublicSans-Black.ttf",
            "/assets/fonts/public-sans/PublicSans-BlackItalic.ttf",
            "/assets/fonts/public-sans/PublicSans-Bold.ttf",
            "/assets/fonts/public-sans/PublicSans-BoldItalic.ttf",
            "/assets/fonts/public-sans/PublicSans-ExtraBold.ttf",
            "/assets/fonts/public-sans/PublicSans-ExtraBoldItalic.ttf",
            "/assets/fonts/public-sans/PublicSans-ExtraLight.ttf",
            "/assets/fonts/public-sans/PublicSans-ExtraLightItalic.ttf",
            "/assets/fonts/public-sans/PublicSans-Italic.ttf",
            "/assets/fonts/public-sans/PublicSans-Light.ttf",
            "/assets/fonts/public-sans/PublicSans-LightItalic.ttf",
            "/assets/fonts/public-sans/PublicSans-Medium.ttf",
            "/assets/fonts/public-sans/PublicSans-MediumItalic.ttf",
            "/assets/fonts/public-sans/PublicSans-Regular.ttf",
            "/assets/fonts/public-sans/PublicSans-SemiBold.ttf",
            "/assets/fonts/public-sans/PublicSans-SemiBoldItalic.ttf",
            "/assets/fonts/public-sans/PublicSans-Thin.ttf",
            "/assets/fonts/public-sans/PublicSans-ThinItalic.ttf"
          ]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
